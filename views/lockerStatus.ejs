<!DOCTYPE html>
<html>
<head>
  <title>Locker Status</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .locker-card {
      width: 90px;
      height: 90px;
      border: 1px solid #ccc;
      border-radius: 10px;
      text-align: center;
      padding: 10px;
      font-size: 1.2rem;
      background: #f9f9f9;
    }
    .locked {
      background-color: #ffe6e6;
    }
    .unlocked {
      background-color: #e6ffe6;
    }
    .locker-grid {
      display: grid;
      grid-template-columns: repeat(8, 1fr);
      gap: 10px;
    }
    .emoji {
      font-size: 24px;
      margin-top: 5px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h2>Locker Status</h2>
    <div class="locker-grid">
      <% lockers.forEach(locker => { %>
        <div class="locker-card <%= locker.status %>">
          <strong><%= locker.id %></strong><br>
          <div class="emoji">
            <% if (locker.status === "locked") { %>
              🔒
            <% } else if (locker.status === "unlocked") { %>
              🔓
            <% } else { %>
              ❓
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
