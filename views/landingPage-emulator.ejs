<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Locker Emulator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="mb-4 text-center">üîê Locker Emulator</h2>
        <form id="lockerForm" method="GET" action="">
          <div class="mb-3">
            <label for="lockerId" class="form-label">Enter Locker Number</label>
            <input type="text" class="form-control" id="lockerId" name="lockerId" required placeholder="e.g. LOCKER123">
          </div>
          <button type="submit" class="btn btn-primary w-100">Open Emulator</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById("lockerForm");
    form.addEventListener("submit", function(e) {
      e.preventDefault();
      const lockerId = document.getElementById("lockerId").value.trim();
      if (lockerId) {
        window.location.href = "/locker/emulator/" + encodeURIComponent(lockerId);
      }
    });
  </script>
</body>
</html>
